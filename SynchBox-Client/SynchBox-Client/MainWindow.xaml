<Window x:Class="SynchBox_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="600">
    <Grid Background="#FFC5ECFF">
        <Grid HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="592">
            <Grid.RowDefinitions>
                <RowDefinition Height="19*"/>
                <RowDefinition Height="378*"/>
                <RowDefinition Height="22*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0">
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem Header="_Synch"/>
                        <MenuItem Header="_Restore"/>
                        <MenuItem Header="_Close"/>
                    </MenuItem>
                    <MenuItem Header="_Settings">
                        <MenuItem Header="_Vars"/>
                        <MenuItem Header="_Logs"/>
                        <MenuItem Header="_Server"/>
                    </MenuItem>
                    <MenuItem Header="_?">
                        <MenuItem Header="_Info"/>
                    </MenuItem>
                </Menu>
                <StackPanel></StackPanel>
            </DockPanel>
        </Grid>

    </Grid>
</Window>
